{% extends 'ApplicationShopAdminBundle::layout.html.twig' %}

{% block title %}Start{% endblock %}

{% block stylesheets %}{% endblock %}

{% block javascripts %}{% endblock %}

{% block body %}
<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
    		<h1 class="page-header">Product</h1>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
			{% if entity.images is empty %}		    
				<p>No image.</p>
			{% else %}
			    {% for image in entity.images|slice(0,1) %}
					<img class="img-responsive img-center" src="{{ asset('bundles/applicationshop/images/product/') }}{{ image.image }}" alt="{{ entity.title|raw }}">
			    {% endfor %}
			{% endif %}
        </div>
        <div class="col-md-6">
        
		    <table class="table table-striped table-hover">
		        <tbody>
		            <tr>
		                <th>Id</th>
		                <td>{{ entity.id }}</td>
		            </tr>
		            <tr>
		                <th>Category</th>
		                <td>{{ entity.category }}</td>
		            </tr>
		            <tr>
		                <th>Title</th>
		                <td>{{ entity.title|raw }}</td>
		            </tr>
		            <tr>
		                <th>Code</th>
		                <td>{{ entity.code }}</td>
		            </tr>
		            <tr>
		                <th>Price</th>
		                <td>{{ entity.price }}</td>
		            </tr>
		            <tr>
		                <th>Pricepromotion</th>
		                <td>{{ entity.pricePromotion }}</td>
		            </tr>
		            <tr>
		                <th>Amount</th>
		                <td>{{ entity.amount }}</td>
		            </tr>
		            <tr>
		                <th>Description</th>
		                <td>{{ entity.description|raw }}</td>
		            </tr>
		            <tr>
		                <th>Descriptionfull</th>
		                <td>{{ entity.descriptionFull|raw }}</td>
		            </tr>
		            <tr>
		                <th>Isactive</th>
		                <td>{# {{ entity.isActive }} #}
		                	{% if entity.isActive %}
		                		<label class="label label-success"><i class="fa fa-check"></i></label>
		                	{% else %}
		                		<label class="label label-danger"><i class="fa fa-close"></i></label>
		                	{% endif %}
		                </td>
		            </tr>
		            <tr>
		                <th>Createdat</th>
		                <td>{{ entity.createdAt|date('Y-m-d H:i:s') }}</td>
		            </tr>
		            <tr>
		                <th>Updatedat</th>
		                <td>{{ entity.updatedAt|date('Y-m-d H:i:s') }}</td>
		            </tr>
		        </tbody>
		    </table>

		    <a class="btn btn-default" href="{{ path('application_admin_product') }}">Back to the list</a>
		    <a class="btn btn-default" href="{{ path('application_admin_product_edit', { 'id': entity.id }) }}">Edit</a>
				
			{#{{ form(delete_form) }}#}
				
			{{ form_start(delete_form, { 'attr': {'class': 'form-btn-inline'} }) }}   	
			  {{ form_widget(delete_form.submit, { 'attr': {'class': 'btn btn-danger'} }) }}
			{{ form_end(delete_form) }}
      
        </div>
    </div>
</div>
{% endblock %}