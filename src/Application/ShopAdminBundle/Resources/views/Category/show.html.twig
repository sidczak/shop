{% extends 'ApplicationShopAdminBundle::layout.html.twig' %}

{% block title %}Start{% endblock %}

{% block stylesheets %}{% endblock %}

{% block javascripts %}{% endblock %}

{% block body %}
<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <h1 class="page-header">Category</h1>
        </div>
    </div>
    <div class="row">
    
        <div class="col-md-6">
            {% if entity.image is empty %}   
                <p>No image.</p>
            {% else %}
                <img class="img-responsive img-center" src="{{ asset('bundles/applicationshop/images/category/') }}{{ entity.image }}" alt="{{ entity.title|raw }}">
            {% endif %}
        </div>
        <div class="col-md-6">

            <table class="table table-striped table-hover">
                <tbody>
                    <tr>
                        <th>Id</th>
                        <td>{{ entity.id }}</td>
                    </tr>
                    <tr>
                        <th>Title</th>
                        <td>{{ entity.title }}</td>
                    </tr>
                    <tr>
                        <th>Slug</th>
                        <td>{{ entity.slug }}</td>
                    </tr>
                    <tr>
                        <th>Description</th>
                        <td>{{ entity.description }}</td>
                    </tr>
                    <tr>
                        <th>Is active</th>
                        <td>{#{{ entity.isactive }}#}
                            {% if entity.isActive %}
                                <label class="label label-success"><i class="fa fa-check"></i></label>
                            {% else %}
                                <label class="label label-danger"><i class="fa fa-close"></i></label>
                            {% endif %}
                        </td>
                    </tr>
                    <tr>
                        <th>Created at</th>
                        <td>{{ entity.createdat|date('Y-m-d H:i:s') }}</td>
                    </tr>
                    <tr>
                        <th>Updated at</th>
                        <td>{{ entity.updatedat|date('Y-m-d H:i:s') }}</td>
                    </tr>
                </tbody>
            </table>
            
            <a class="btn btn-default" href="{{ path('application_admin_category') }}">Back to the list</a>
            <a class="btn btn-default" href="{{ path('application_admin_category_edit', { 'id': entity.id }) }}">Edit</a>
            
            {#{{ form(delete_form) }}#}

            {{ form_start(delete_form, { 'attr': {'class': 'form-btn-inline'} }) }}       
                {{ form_widget(delete_form.submit, { 'attr': {'class': 'btn btn-danger'} }) }}
            {{ form_end(delete_form) }}


        </div>
    </div>
</div>
{% endblock %}
